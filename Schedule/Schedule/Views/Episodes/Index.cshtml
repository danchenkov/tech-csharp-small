@{
    ViewData["Title"] = "Current Episodes";
}

<h3>Episodes</h3>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Episode</th>
                <th>Series</th>
                <th>Aired At</th>
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: episodes, visible: episodes().length > 0">
            <tr>
                <td data-bind="text: title"></td>
                <td data-bind="text: series"></td>
                <td data-bind="text: airedAt"></td>
                <td><a href="#" data-bind="click: $parent.removeEpisode"><img src="/images/redx.svg" style="display: inline-block; width: 1em; height: 1em;" title="Delete" alt="Delete" /></a></td>
            </tr>
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary" data-bind="click: save">Save</button>
</div>

<hr />

<h4>New Episode</h4>
<form data-bind="submit: addEpisode">
    <div id="episode">
        <div class="form-row" style="display: flex; align-items: flex-end;">
            <div class="form-group col-md-4">
                <label for="episodeTitle">Title</label>
                <input id="episodeTitle" type="text" class="form-control" data-bind="value: newEpisodeTitle" placeholder="Episode Title" />
            </div>
            <div class="form-group col-md-4">
                <label for="series">Series</label>
                <input id="series" type="text" class="form-control" data-bind="value: newSeasonTitle" placeholder="Series" />
            </div>
            <div class="form-group col-md-3">
                <label for="airedAt">Date / Time</label>
                <input id="airedAt" type="text" class="form-control" data-bind="value: newAiringDate" placeholder="Aired At" />
            </div>
            <div class="form-group col-md-1">
                <button id="addButton" type="submit" class="btn btn-default">Add</button>
            </div>
        </div>
    </div>
</form>

